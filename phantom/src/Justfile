# justfile - Comandos convenientes

# Setup inicial (one-time)
setup:
    nix develop
    mkdir -p data/{analyzed,embeddings,cerebro}

# Extract knowledge (usa GCP credits)
extract:
    cerebro-extract

# Start local server (zero cost!)
serve:
    cerebro-serve

# Query via CLI
query QUESTION:
    cerebro query "{{QUESTION}}"

# Full pipeline
pipeline: extract serve
